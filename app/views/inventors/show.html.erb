<div class="row">
  <div class="col s12 center">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Inventor: <%= @inventor.name %> </span>
        <p>Age: <%= @inventor.age %> </p>
        <p>Hire Date: <%= @inventor.hire_date.strftime('%B,%e %Y') %> </p>
        <p>Speciality: <%= @inventor.speciality.titleize %> </p>
        <p>Number Of Robots: <%= @robots.count %> </p>
      </div>
      <div class="card-action">
        <%= link_to 'Edit', edit_inventor_path(@inventor) %>
        <%= link_to 'Delete', inventor_path(@inventor), method: :delete, data: {confirm: 'Really Delete?'} %>
      </div>
    </div>
    <% if @robots.any? %>
      <h4> All Robots </h4>
      <div class="row">
      <% @robots.each do |robot| %>
           <div class="col s12 m6 l6">
             <div class="card blue-grey darken-1">
               <div class="card-content white-text">
                 <span class="card-title"> <%= robot.name %> </span>
                 <p> Industry: <%= robot.industry %> </p>
               </div>
               <div class="card-action">
                 <%= link_to 'Show', inventor_robot_path(@inventor, robot), :class => "blue-text text-darken-2" %>
                 <%= link_to 'Edit', edit_inventor_robot_path(@inventor, robot), class: "blue-text text-darken-2" %>
                 <%= link_to 'Delete', inventor_robot_path(@inventor, robot), method: :delete, data: {confirm: 'Really Delete?'} %>
               </div>
             </div>
           </div>
        <% end %>
      </div>
    <% end %>
    <%= link_to 'New Robot', new_inventor_robot_path(@inventor), class: 'btn blue' %>
  </div>
</div>
